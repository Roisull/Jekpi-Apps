<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/default_background"
    android:padding="24dp"
    tools:context=".view.fragment.LoginBiometrikFragment">

    <TextView
        android:id="@+id/tvTitleLoginSidikJari"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selamat Datang"
        android:textAlignment="center"
        android:textColor="@color/brand_primary"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        app:layout_constraintVertical_bias="0"
        />
    <TextView
        android:id="@+id/tvSubTitleLoginSidikJari"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:text="Pindai sidik jari untuk masuk aplikasi! Mulai nikmati semua fiturnya"
        android:textAlignment="center"
        android:fontFamily="@font/poppins"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleLoginSidikJari"
        />
    <LinearLayout
        android:id="@+id/llicSidikJariLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_login_fingerprint"
            android:layout_marginBottom="50dp"
            />
        <androidx.core.widget.ContentLoadingProgressBar
            android:id="@+id/clpLogin"
            android:layout_width="250dp"
            android:layout_height="20dp"
            android:outlineSpotShadowColor="@color/brand_primary"
            android:outlineAmbientShadowColor="@color/brand_primary"
            android:progressDrawable="@drawable/bg_loading_bar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_marginBottom="21dp"
            />
        <TextView
            android:id="@+id/tvMemindaiSidikJariLogin"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Memindai..."
            android:textAlignment="center"
            android:fontFamily="@font/poppins"
            android:textSize="16sp"
            android:textColor="@color/default_font"
            />
    </LinearLayout>
    <Button
        android:id="@+id/btnTesProgressBar"
        android:alpha="0"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="tes progress bar"
        app:layout_constraintTop_toBottomOf="@+id/llicSidikJariLogin"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center_horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gagal pakai sidik jari?"
            android:fontFamily="@font/poppins_light"
            android:textSize="14sp"
            android:textColor="@color/default_font"
            android:layout_marginRight="7dp"
            />
        <TextView
            android:id="@+id/tvMasukDenganPIN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masuk Dengan PIN"
            android:fontFamily="@font/poppins_light"
            android:textSize="14sp"
            android:textColor="@color/brand_primary"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>