<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragment.LoginWithPinFragment">

    <TextView
        android:id="@+id/tvTitleMasukkanPinLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Masukkan Pin Keamanan Kamu"
        android:textAlignment="center"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="16sp"
        android:textColor="@color/default_font"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        />
    <LinearLayout
        android:id="@+id/llValuePin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleMasukkanPinLogin"
        android:layout_marginTop="30dp"
        >
        <View
            android:id="@+id/vPin1"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_weight="1"
            android:background="@drawable/pin_place"
            android:layout_margin="10dp"
            />
        <View
            android:id="@+id/vPin2"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_weight="1"
            android:background="@drawable/pin_place"
            android:layout_margin="10dp"
            />
        <View
            android:id="@+id/vPin3"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_weight="1"
            android:background="@drawable/pin_place"
            android:layout_margin="10dp"
            />
        <View
            android:id="@+id/vPin4"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_weight="1"
            android:background="@drawable/pin_place"
            android:layout_margin="10dp"
            />
        <View
            android:id="@+id/vPin5"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_weight="1"
            android:background="@drawable/pin_place"
            android:layout_margin="10dp"
            />
        <View
            android:id="@+id/vPin6"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_weight="1"
            android:background="@drawable/pin_place"
            android:layout_margin="10dp"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tvLupaPinLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lupa Pin Keamanan"
        app:layout_constraintTop_toBottomOf="@+id/llValuePin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textAlignment="center"
        android:textColor="@color/brand_primary"
        android:fontFamily="@font/poppins"
        android:textSize="14sp"
        android:layout_marginTop="32dp"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnLanjutkanRegister"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:backgroundTint="@color/brand_primary"
        app:layout_constraintTop_toBottomOf="@+id/tvLupaPinLogin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/clKeyboard"
        app:layout_constraintVertical_bias="1"
        android:text="Masuk"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:background="@drawable/bg_button"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="18sp"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clKeyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/bg_keyboard"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        >
        <LinearLayout
            android:id="@+id/llKeyboard1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center_horizontal"
            >
            <Button
                android:id="@+id/btn_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="30sp"
                android:textColor="@color/default_font"
                android:backgroundTint="@color/default_background"
                />
            <Button
                android:id="@+id/btn_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="30sp"
                android:textColor="@color/default_font"
                android:backgroundTint="@color/default_background"
                />
            <Button
                android:id="@+id/btn_03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="30sp"
                android:textColor="@color/default_font"
                android:backgroundTint="@color/default_background"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llKeyboard2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llKeyboard1"
            android:gravity="center_horizontal"
            >
            <Button
                android:id="@+id/btn_04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="30sp"
                android:textColor="@color/default_font"
                android:backgroundTint="@color/default_background"
                />
            <Button
                android:id="@+id/btn_05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="30sp"
                android:textColor="@color/default_font"
                android:backgroundTint="@color/default_background"
                />
            <Button
                android:id="@+id/btn_06"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="30sp"
                android:textColor="@color/default_font"
                android:backgroundTint="@color/default_background"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llKeyboard3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llKeyboard2"
            android:gravity="center_horizontal"
            >
            <Button
                android:id="@+id/btn_07"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="30sp"
                android:textColor="@color/default_font"
                android:backgroundTint="@color/default_background"
                />
            <Button
                android:id="@+id/btn_08"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="30sp"
                android:textColor="@color/default_font"
                android:backgroundTint="@color/default_background"
                />
            <Button
                android:id="@+id/btn_09"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="30sp"
                android:textColor="@color/default_font"
                android:backgroundTint="@color/default_background"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llKeyboard4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llKeyboard3"
            android:gravity="center_horizontal"
            >
            <ImageView
                android:id="@+id/iv_hide_keyboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_down"
                android:fontFamily="@font/poppins_semibold"
                android:backgroundTint="@color/default_background"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="50dp"
                />
            <Button
                android:id="@+id/btn_00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="30sp"
                android:textColor="@color/default_font"
                android:backgroundTint="@color/default_background"
                />
            <ImageView
                android:id="@+id/iv_backspace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_backspace"
                android:fontFamily="@font/poppins_semibold"
                android:layout_marginEnd="50dp"
                android:backgroundTint="@color/default_background"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>